
@{
    ViewData["Title"] = "GetById";
}
@model AddInformation
<div>
    <h1>@ViewBag.Name</h1>
    <div class="parent">
        <div class="child">
            <form asp-area="" asp-controller="Users" asp-action="AddInf" method="post">
                <fieldset>
                    <legend><strong>Добавить тег</strong></legend>
                    <div class="form-group" style="display: none;">
                        <input asp-for="Id" type="text" placeholder="Введите название" value="@ViewBag.Id">
                    </div>
                    <div class="form-group">
                        <label asp-for="Hobby"></label>
                        <input asp-for="Hobby" type="text" placeholder="Введите название">
                        <span asp-validation-for="Hobby"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Text"></label>
                        <textarea asp-for="Text"></textarea>
                        <span asp-validation-for="Text"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Img"></label>
                        <input asp-for="Img" type="text" placeholder="Введите ссылку">
                        <span asp-validation-for="Img"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Добавить</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>