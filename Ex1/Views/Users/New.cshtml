
@{
    ViewData["Title"] = "New";
}
@model UserCreate
<div>
    <div>
        <div>
            <form asp-area="" asp-controller="Users" asp-action="New" method="post">
                <fieldset>
                    <legend><strong>Новый автор</strong></legend>
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" placeholder="Введите имя">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Login"></label>
                        <input asp-for="Login" type="text" placeholder="Введите логин">
                        <span asp-validation-for="Login"></span>
                    </div>
                    <div class="form-check form-group">
                        <label asp-for="Sex" class="form-check-label" for="checkbox-1">Ваш пол: </label><br />
                        <div style="margin-left: 30px;">
                            <input asp-for="Sex" class="form-check-input" type="radio" value="Муж.">Муж.<br />
                            <input asp-for="Sex" class="form-check-input" type="radio" value="Жен.">Жен.<br />
                            <input asp-for="Sex" class="form-check-input" type="radio" value="Не опр.">Не опред.<br />
                        </div>
                        <span asp-validation-for="Sex"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date"></label>
                        <input asp-for="Date" type="date" value="@DateTime.Today.Date">
                        <span asp-validation-for="Date"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Создать</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>